    "version": "0.2.0",
    "configurations": [
        {
            "name": "Base Service Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "base_service/api",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--debug",
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
        {
            "name": "Base Service Init Database",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "base_service/api",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "init-db",
            ],
            "jinja": true,
            "autoStartBrowser": false
        },
    ]
}